    <body>
        <div id="app">
            <button onclick=pressionaB()>
                BOTAO PARA PRESSIONAR
            </button>
            <button onclick=perigo()>
                BOTAO PARA NÃO PRESSIONAR
            </button>
            <button onmouseover=detecta_mouse()>
                BOTAO ARMADILHA
            </button>
           
           
        </div>
        <script>
            function pressionaB(){
                alert("Botão pressionado");
            }
            function perigo(){
                alert("Botão crítico");
            }
            function detecta_mouse(){
                alert('Mouse detectado');
            }
           
        </script>
    </body>
